<!--pages/uploadimg/uploadimg.wxml-->
<view class='margin-10 '>
  <view class='f-32 bg-gray padding-10 border-5'>上传取货单:</view>
  <view class='content flex-row'>
    <view class='flex-1'></view>
    <view class='img-box'>
      <view class='flex-row' >
        <block wx:for="{{images}}" wx:key="index">
          <view class=''>
            <image src='{{uploadpath}}photo/{{item}}' bindlongpress="bindlongpressimg" id='{{index}}' style='width:156rpx;height:156rpx' mode='aspectFill'></image>
          </view>
        </block>
        <view class='chooseimg' bindtap='uploadimg'>
          <view class="weui-uploader__input-box"></view>
        </view>
      </view>
      <view class='flex-row'>
        <view class='flex-1'></view>
        <view class='tips'>长按可删除</view>
        <view class='flex-1'></view>
      </view>

    </view>
    <view class='flex-1'></view>
  </view>
</view>

<view class='margin-10 '>
  <view class='f-32 bg-gray padding-10 border-5'>上传过磅单:</view>
  <view class='content flex-row'>
    <view class='flex-1'></view>
    <view class='img-box'>
      <view class='img-list'>
        <block wx:for="{{detailPics}}" wx:key="index">
          <view class='img-item'>
            <image src='{{item}}' bindlongpress="bindlongpressimg" data-id='{{index}}'></image>
          </view>
        </block>
        <view class='chooseimg' bindtap='uploadDetailImage'>
          <view class="weui-uploader__input-box"></view>
        </view>
      </view>
      <view class='flex-row'>
        <view class='flex-1'></view>
        <view class='tips'>长按可删除</view>
        <view class='flex-1'></view>
      </view>

    </view>
    <view class='flex-1'></view>
  </view>
</view>

<view class='margin-10 '>
  <view class='f-32 bg-gray padding-10 border-5'>上传货物图片:</view>
  <view class='content flex-row'>
    <view class='flex-1'></view>
    <view class='img-box'>
      <view class='img-list'>
        <block wx:for="{{detailPics}}" wx:key="index">
          <view class='img-item'>
            <image src='{{item}}' bindlongpress="bindlongpressimg" data-id='{{index}}'></image>
          </view>
        </block>
        <view class='chooseimg' bindtap='uploadDetailImage'>
          <view class="weui-uploader__input-box"></view>
        </view>
      </view>
      <view class='flex-row'>
        <view class='flex-1'></view>
        <view class='tips'>长按可删除</view>
        <view class='flex-1'></view>
      </view>

    </view>
    <view class='flex-1'></view>
  </view>
</view>