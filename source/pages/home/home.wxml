  <view class='catitem flex-1 bg-white flex-row flex-column padding-30' wx:key="k" bindtap='bindcontact'>
    <view class=' text-center  txt-gray {{ctt==1?"to-white":"" }} top   txt-bold' bindtap='bindcontact'>待接单</view>
    <view wx:if='{{ctt!=1}}' style='height:4rpx;width:120rpx;' class=''></view>
    <view wx:if='{{ctt==1}}' style='height:4rpx;width:120rpx;' class='bg-primary'></view>
  </view>

  <view class='catitem flex-1 bg-white flex-row flex-column padding-30' wx:key="k" bindtap='bindwaitcompleted'>
    <view class=' text-center  txt-gray {{ctt==2?"to-white":""}} top   txt-bold' bindtap='bindwaitcompleted'>待取货</view>
    <view wx:if='{{ctt!=2}}' style='height:4rpx;width:120rpx;' class=''></view>
    <view wx:if='{{ctt==2}}' style='height:4rpx;width:120rpx;' class='bg-primary'></view>
  </view>

  <view class='catitem flex-1 bg-white flex-row flex-column padding-30' wx:key="k" bindtap='bindcompleted'>
    <view class=' text-center  txt-gray {{ctt==3?"to-white":""}} top   txt-bold' bindtap='bindcompleted'>运输中</view>
    <view wx:if='{{ctt!=3}}' style='height:4rpx;width:120rpx;' class=''></view>
    <view wx:if='{{ctt==3}}' style='height:4rpx;width:120rpx;' class='bg-primary'></view>
  </view>

</view>
